<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/rsllt_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="right"
        android:hint="@string/string_0"
        android:textColor="#000000"
        android:textSize="37pt"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/inpt_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rsllt_view"
        android:layout_marginTop="20dp"
        android:gravity="right"
        android:hint="@string/string_0"
        android:textSize="30pt"
        tools:ignore="RtlHardcoded" />

    <TableLayout
        android:id="@+id/table_layot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#2B2B2B"
        android:paddingTop="15dp"
        android:paddingBottom="40dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <Button
                android:id="@+id/ac_btn"
                android:layout_width="30pt"
                android:layout_height="30pt"

                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:background="#1B5E20"
                android:shadowColor="#815858"
                android:text="@string/button_ac"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/back_btn"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:background="#1B5E20"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/StringB"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/btn_div"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:background="#1B5E20"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="/"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btn_mul"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="#1B5E20"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="X"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                tools:ignore="ButtonStyle,HardcodedText" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_7"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:background="#DDD8D8"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="7"
                android:textSize="25sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btn_8"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:background="#DDD8D8"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="8"
                android:textSize="25sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btn_9"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:background="#DDD8D8"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="9"
                android:textSize="25sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btn_minus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="#1B5E20"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="-"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                tools:ignore="ButtonStyle,HardcodedText" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_4"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:background="#DDD8D8"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="4"
                android:textSize="25sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:background="#DDD8D8"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="5"
                android:textSize="25sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:background="#DDD8D8"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="6"
                android:textSize="25sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btn_plus"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="#1B5E20"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="+"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                tools:ignore="ButtonStyle,HardcodedText" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_1"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:background="#DDD8D8"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="1"
                android:textSize="25sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:background="#DDD8D8"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="2"
                android:textSize="25sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:background="#DDD8D8"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="3"
                android:textSize="25sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btn_dot"
                android:layout_width="30pt"
                android:layout_height="30pt"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="#1B5E20"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="."
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                tools:ignore="ButtonStyle,HardcodedText" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="1dp">

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="30pt"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:background="#DDD8D8"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="("
                android:textSize="25sp"
                tools:ignore="ButtonStyle,HardcodedText" />

            <Button
                android:id="@+id/btn_0"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="30pt"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:background="#DDD8D8"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="0"
                android:textColor="#000000"
                android:textSize="25sp"
                tools:ignore="HardcodedText,DuplicateSpeakableTextCheck" />

            <Button
                android:id="@+id/button12"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="30pt"
                android:layout_marginEnd="1dp"
                android:layout_weight="1"
                android:background="#DDD8D8"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text=")"
                android:textColor="#000000"
                android:textSize="25sp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/btn_equal"
                android:layout_width="wrap_content"
                android:layout_height="30pt"
                android:layout_weight="1"
                android:background="@color/purple_200"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="="
                android:textSize="25sp"
                tools:ignore="ButtonStyle,HardcodedText" />
        </TableRow>
    </TableLayout>
</RelativeLayout>